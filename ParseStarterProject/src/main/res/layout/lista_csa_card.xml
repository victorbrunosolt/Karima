<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="4dp"
    android:layout_marginTop="4dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="false"
    app:cardPreventCornerOverlap="true"
    app:cardCornerRadius="0dp">

<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="0dp"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="1dp">

    <ImageView
        android:id="@+id/image_lista_csa"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_marginTop="0dp"
        android:layout_alignParentTop="true"/>

    <TextView
        android:id="@+id/text_nome_csa"
        android:textColor="@color/colorPrimary"
        android:layout_below="@+id/image_lista_csa"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="14sp"
        android:paddingLeft="16dp"
        android:paddingTop="5dp"
        />
"
    <TextView
        android:id="@+id/text_local_csa"
        android:textColor="@color/colorPrimary"
        android:layout_below="@+id/text_nome_csa"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="16dp"
        android:paddingTop="3dp"
        android:textSize="14sp"
        />

    <TextView
        android:textColor="@color/colorPrimary"
        android:layout_below="@+id/text_local_csa"
        android:id="@+id/geo_localizacao_csa"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="16dp"
        android:paddingTop="3dp"
        android:textSize="14sp"
        android:paddingBottom="5dp"
        />


</RelativeLayout>
</android.support.v7.widget.CardView>